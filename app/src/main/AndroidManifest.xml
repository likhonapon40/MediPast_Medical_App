<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartappProject.likhon.medipasthospitalmgt">

    <uses-feature
        android:name="android.hardware.Camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.smartappProject.likhon.medipasthospitalmgt.WelcomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartappProject.likhon.medipasthospitalmgt.AddDoctorActivity"
            android:label="Add Doctor"
            android:theme="@style/AddedTheme" />
        <activity
            android:name="com.smartappProject.likhon.medipasthospitalmgt.ViewDoctorActivity"
            android:label="View Doctor" />
        <activity
            android:name="com.smartappProject.likhon.medipasthospitalmgt.AddMedicalHistoryActivity"
            android:label="Add Medical History" />
        <activity
            android:name="com.smartappProject.likhon.medipasthospitalmgt.ViewMedicalHistoryActivity"
            android:label="View Medical History" />
        <activity
            android:name="com.smartappProject.likhon.medipasthospitalmgt.ViewDoctorDetailsActivity"
            android:label="View Doctor Details" />
    </application>

</manifest>