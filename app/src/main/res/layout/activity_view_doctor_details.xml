<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ViewDoctorDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctorDetailsCardViewId"
            app:cardBackgroundColor="@color/backgroundColor"
            app:cardElevation="20dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailsViewDoctorNameTvId"
                    android:padding="15dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/sofiaregular"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailsViewDoctorDetailsTvId"
                    android:padding="15dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:drawableLeft="@drawable/ic_info_black_24dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/sofiaregular"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailsViewDoctorAppointmentTvId"
                    android:padding="15dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/sofiaregular"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailsViewDoctorPhoneNumberTvId"
                    android:padding="15dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/sofiaregular"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailsViewDoctorEmailTvId"
                    android:padding="15dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/sofiaregular"
                    android:textSize="15sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>