<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".AddDoctorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addDoctorNameEtId"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="Enter name"
                android:inputType="text"
                android:textAlignment="center"
                android:fontFamily="@font/sofiaregular"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addDoctorDetailsEtId"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_info_black_24dp"
                android:hint="Enter details"
                android:inputType="text"
                android:textAlignment="center"
                android:fontFamily="@font/sofiaregular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addDoctorAppointmentTvId"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:text="Choose an appointment date"
                android:textAlignment="center"
                android:fontFamily="@font/sofiaregular"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addDoctorPhoneNumberEtId"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:hint="Enter a phone number"
                android:inputType="phone"
                android:textAlignment="center"
                android:fontFamily="@font/sofiaregular"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addDoctorEmailEtId"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:hint="Enter an email id "
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:fontFamily="@font/sofiaregular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/backgroundColor"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight=".5"
                    android:layout_margin="5dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addInformationBtnId"
                        android:layout_weight=".5"
                        android:background="@drawable/circlebuttondesign"
                        android:padding="20dp"
                        android:text="Add Information"
                        android:textSize="13dp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/sofiaregular"
                        android:textColor="@color/textColorWhite"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/backgroundColor"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight=".5"
                    android:layout_margin="5dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/updateInformationBtnId"
                        android:layout_weight=".5"
                        android:background="@drawable/circlebuttondesign"
                        android:padding="20dp"
                        android:text="Update Information"
                        android:textSize="13dp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/sofiaregular"
                        android:textColor="@color/textColorWhite"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>